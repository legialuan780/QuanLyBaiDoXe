@{
    ViewData["Title"] = "Tổng quan";
}

<!-- Page Header -->
<div class="page-header">
    <div>
        <h1 class="page-title">Tổng quan</h1>
        <div class="breadcrumb">
            <a href="#">Trang chủ</a>
            <span>/</span>
            <span>Tổng quan</span>
        </div>
    </div>
    <div>
        <button class="btn-primary-admin">
            <i class="fas fa-plus"></i>
            Thêm mới
        </button>
    </div>
</div>

<!-- Stat Cards -->
<div class="stat-cards">
    <div class="stat-card">
        <div class="stat-card-icon teal">
            <i class="fas fa-car"></i>
        </div>
        <div class="stat-card-info">
            <h3>156</h3>
            <p>Xe trong bãi</p>
        </div>
        <div class="stat-card-trend up">
            <i class="fas fa-arrow-up"></i>
            12.5%
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-card-icon green">
            <i class="fas fa-sign-in-alt"></i>
        </div>
        <div class="stat-card-info">
            <h3>324</h3>
            <p>Xe vào hôm nay</p>
        </div>
        <div class="stat-card-trend up">
            <i class="fas fa-arrow-up"></i>
            8.2%
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-card-icon orange">
            <i class="fas fa-sign-out-alt"></i>
        </div>
        <div class="stat-card-info">
            <h3>298</h3>
            <p>Xe ra hôm nay</p>
        </div>
        <div class="stat-card-trend down">
            <i class="fas fa-arrow-down"></i>
            3.1%
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-card-icon teal">
            <i class="fas fa-money-bill-wave"></i>
        </div>
        <div class="stat-card-info">
            <h3>15.2M</h3>
            <p>Doanh thu hôm nay</p>
        </div>
        <div class="stat-card-trend up">
            <i class="fas fa-arrow-up"></i>
            18.7%
        </div>
    </div>
</div>

<div class="row">
    <!-- Chart Card -->
    <div class="col-lg-8">
        <div class="admin-card">
            <div class="admin-card-header">
                <h3 class="admin-card-title">Thống kê doanh thu</h3>
                <div>
                    <button class="btn-secondary-admin btn-sm">Tháng</button>
                    <button class="btn-primary-admin btn-sm">Tuần</button>
                </div>
            </div>
            <div style="height: 300px; display: flex; align-items: center; justify-content: center; background: linear-gradient(180deg, rgba(33, 166, 145, 0.1) 0%, rgba(33, 166, 145, 0) 100%); border-radius: 8px;">
                <p style="color: var(--light-gray);">Biểu đồ doanh thu sẽ hiển thị ở đây</p>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="col-lg-4">
        <div class="admin-card">
            <div class="admin-card-header">
                <h3 class="admin-card-title">Tình trạng bãi đỗ</h3>
            </div>
            <div class="mb-3">
                <div class="d-flex justify-content-between mb-1">
                    <span>Xe máy</span>
                    <span>85/120</span>
                </div>
                <div class="progress" style="height: 8px;">
                    <div class="progress-bar" style="width: 70%; background-color: #21A691;"></div>
                </div>
            </div>
            <div class="mb-3">
                <div class="d-flex justify-content-between mb-1">
                    <span>Ô tô 4 chỗ</span>
