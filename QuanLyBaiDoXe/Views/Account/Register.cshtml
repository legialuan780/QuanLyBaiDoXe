@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-wrapper">
        <div class="login-left">
            <div class="overlay">
                <h1 class="brand">Travelista Tours</h1>
                <p class="subtitle">Travel is the only purchase that enriches you in ways beyond material wealth</p>
            </div>
        </div>
        <div class="login-right">
            <div class="content">
                <h2 class="welcome">Welcome</h2>
                <p class="hint">Create your account</p>
                <form asp-action="Register" asp-controller="Account" method="post" class="login-form">
                    <div class="mb-3">
                        <label class="form-label">Full name</label>
                        <div class="input d-flex align-items-center">
                            <span class="icon">??</span>
                            <input class="form-control border-0" type="text" name="fullName" required placeholder="Your name" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <div class="input d-flex align-items-center">
                            <span class="icon">&#64;</span>
                            <input class="form-control border-0" type="email" name="email" required placeholder="email@example.com" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <div class="input d-flex align-items-center">
                            <span class="icon">??</span>
                            <input class="form-control border-0" type="password" name="password" required placeholder="********" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">REGISTER</button>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="text-danger mt-2">
                            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@err.ErrorMessage</div>
                            }
                        </div>
                    }
                </form>
                <div class="register text-center mt-3">
                    ?ã có tài kho?n? <a href="/account/login">Login</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>