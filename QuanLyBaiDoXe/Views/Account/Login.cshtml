@{
    ViewData["Title"] = "Login";
    Layout = null; // No top navbar/layout for login page
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-wrapper">
        <div class="login-left">
            <div class="overlay">
                <h1 class="brand">Travelista Tours</h1>
                <p class="subtitle">Travel is the only purchase that enriches you in ways beyond material wealth</p>
            </div>
        </div>
        <div class="login-right">
            <div class="content">
                <h2 class="welcome">Welcome</h2>
                <p class="hint">Login with Email</p>
                <form asp-action="Login" asp-controller="Account" method="post" class="login-form">
                    <input type="hidden" name="returnUrl" value="@Context.Request.Query["returnUrl"]" />
                    <div class="mb-3">
                        <label class="form-label">Email id</label>
                        <div class="input d-flex align-items-center">
                            <span class="icon">&#64;</span>
                            <input class="form-control border-0" type="email" name="email" required placeholder="email@example.com" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <div class="input d-flex align-items-center">
                            <span class="icon">??</span>
                            <input class="form-control border-0" type="password" name="password" required placeholder="********" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">LOGIN</button>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="text-danger mt-2">
                            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@err.ErrorMessage</div>
                            }
                        </div>
                    }
                </form>
                <div class="social">
                    <span class="or">OR</span>
                    <div class="providers">
                        <button type="button" class="circle g">G</button>
                        <button type="button" class="circle f">f</button>
                        <button type="button" class="circle a">?</button>
                    </div>
                </div>
                <div class="register text-center">
                    Don't have account? <a href="#">Register Now</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>