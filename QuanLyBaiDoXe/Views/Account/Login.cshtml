@{
    ViewData["Title"] = "Login";
    Layout = null; // No top navbar/layout for login page
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-wrapper">
        <div class="login-left">
            <div class="overlay">
                <h1 class="brand">Quản Lý Bãi Đỗ Xe</h1>
                <p class="subtitle">Hệ thống quản lý bãi đỗ xe thông minh và hiện đại</p>
            </div>
        </div>
        <div class="login-right">
            <div class="content">
                <h2 class="welcome">Chào mừng</h2>
                <p class="hint">Đăng nhập vào hệ thống</p>
                
                @if (TempData["LogoutMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["LogoutMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["RegisterSuccess"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["RegisterSuccess"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Login" asp-controller="Account" method="post" class="login-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                    
                    <div class="mb-3">
                        <label class="form-label">Tên đăng nhập</label>
                        <div class="input d-flex align-items-center">
                            <span class="icon">👤</span>
                            <input class="form-control border-0" type="text" name="email" required placeholder="Nhập tên đăng nhập" autofocus />
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Mật khẩu</label>
                        <div class="input d-flex align-items-center">
                            <span class="icon">🔒</span>
                            <input class="form-control border-0" type="password" name="password" required placeholder="********" />
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">ĐĂNG NHẬP</button>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@err.ErrorMessage</div>
                            }
                        </div>
                    }
                </form>
                
                <div class="register text-center mt-4">
                    Chưa có tài khoản? <a asp-controller="Account" asp-action="Register">Đăng ký ngay</a>
                </div>

                <div class="text-center mt-3">
                    <small class="text-muted">
                        Hệ thống Quản lý Bãi Đỗ Xe - &copy; 2024
                    </small>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>